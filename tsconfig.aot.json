{
  "compilerOptions": {
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./aot",
    "sourceMap": true,
    "sourceRoot": "src",
    "noEmitHelpers": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": ["es6", "dom"]
  },
  "include": [
    "./src/server/**/*.module.ts",
    "./src/client/**/*.module.ts",
    "./src/server/*.d.ts",
    "./src/client/*.d.ts"
  ],
  "angularCompilerOptions": {
    "debug": false
  },
  "compileOnSave": false,
  "buildOnSave": false
}